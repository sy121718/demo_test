APP_DEBUG = true

DB_TYPE = mysql
DB_HOST = 127.0.0.1
DB_NAME = test
DB_USER = username
DB_PASS = password
DB_PORT = 3306
DB_CHARSET = utf8

DEFAULT_LANG = zh-cn

# =============== JWT配置 ===============
# JWT密钥（生产环境务必修改为复杂密钥）
JWT_SECRET = your-super-secret-jwt-key-change-this-in-production

# Token有效期（秒）
JWT_TTL = 7200          # 2小时
JWT_REFRESH_TTL = 1209600  # 2周

# JWT刷新宽限期（秒）
JWT_REFRESH_GRACE_PERIOD = 300  # 5分钟

# =============== 缓存配置 ===============
# 缓存驱动 (file|redis)
CACHE_DRIVER = file

# 文件缓存有效期（秒，0表示永久）
CACHE_EXPIRE = 0

# Redis缓存配置
REDIS_HOST = 127.0.0.1
REDIS_PORT = 6379
REDIS_PASSWORD = 
REDIS_SELECT = 0
REDIS_TIMEOUT = 0
REDIS_PREFIX = 
REDIS_EXPIRE = 3600     # 1小时
